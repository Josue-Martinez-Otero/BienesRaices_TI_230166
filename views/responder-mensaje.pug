doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/app.css")
        title Bienes Raíces | Responder Mensaje

    body(class="min-h-screen bg-gradient-to-b from-blue-400 to-blue-400")
        main(class="mx-auto container mt-10 px-2")
            h2(class="text-2xl font-bold text-center my-10") Responder Mensaje

            a(href="/mis-propiedades" class="rounded-lg py-2 px-10 bg-redNCS text-sm font-bold text-center text-white uppercase my-5 inline-block w-full hover:bg-redNCS-light sm:w-auto transition ease-in-out") Volver

            div(class="mx-auto max-w-4xl bg-white shadow rounded-xl p-6")
                p(class="font-bold text-gray-800") Mensaje original:
                    span(class="font-normal")= mensaje.mensaje

                form(method="POST" action=`/responder-mensaje/${mensaje.id}`)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    input(type="hidden" name="usuarioId" value=mensaje.remitenteId)

                    div(class="space-y-5 mt-4")
                        label(for="respuesta" class="text-gray-700") Respuesta
                        textarea(id="respuesta" name="respuesta" class="w-full px-2 py-2 border border-gray-300 rounded-lg shadow placeholder-gray-400" placeholder="Escribe tu respuesta aquí...")

                    input(type="submit" value="Responder" class="bg-redNCS text-white font-bold uppercase text-sm w-full p-2 cursor-pointer")
