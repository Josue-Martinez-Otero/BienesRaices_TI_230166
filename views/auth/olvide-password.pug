extends ../layout/index 

block contenido
   div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-redNCS Bienes
            span.font-normal.text-black Raíces
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg           
        .mt-8.mx-auto.max-w-md 
            .bg-redNCS.py-8.px-4.shadow
                form(method='POST' action='/auth/olvide-password' noValidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Correo
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu correo" type="email" name="email" required)

                    .flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro" class="hover:underline hover:decoration-2 hover:decoration-red-600 transition duration-300") ¿No tienes cuenta? Crea una...
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:underline hover:decoration-2 hover:decoration-red-600 transition duration-300") ¿Ya tienes cuenta? Inicia sesión

                    input(class="w-full bg-roseTaupe hover:bg-redNCS text-white font-bold py-3 cursor-pointer rounded-lg transition duration-300" type="submit" value="Crear cuenta")
